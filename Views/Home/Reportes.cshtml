@using System;
@using Microsoft.AspNetCore.Razor;

@model IEnumerable<PruebaTallerProyecto.Models.Maceta>

<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"></script>    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>  
    <script type="text/javascript">
        $(document).ready(function(){
            var chart = new CanvasJS.Chart("chartContainer",{
                animationEnabled: true,
	            theme: "light2",
                title: {
		            text: "Cantidad de humedad por fecha"
	            },
                axisY: {
		            title: "Humedad"
	            },
                
            });

        });

    </script>
</head>

<body>
<h1>@ViewData["Title"]</h1>

<p>Ahora veremos si funciona</p>
<div class="row">


    <div class="col-md-2">
        <h2>Nombre</h2>

    </div>
    <div class="col-md-2">
        <h2>Mensaje</h2>
    </div>
    <div class="col-md-2">
        <h2>Humedad</h2>

    </div>
    <div class="col-md-2">
        <h2>Fecha</h2>

    </div>
    <div class="col-md-2">
        <h2>Hora</h2>

    </div>
    <div class="offset-md-2">

    </div>
    @foreach (var item in Model)
    {
    <div class="col-md-2">
        <p>@Html.DisplayFor(modelItem=>item.nombre)</p>

    </div>
    <div class="col-md-2">
         <p>@Html.DisplayFor(modelItem=>item.mensaje)</p>
    </div>
    <div class="col-md-2">
         <p>@Html.DisplayFor(modelItem=>item.humedad)</p>

    </div>
    <div class="col-md-2">
         <p>@Html.DisplayFor(modelItem=>item.fecha)</p>

    </div>
    <div class="col-md-2">
        <p>@Html.DisplayFor(modelItem=>item.hora)</p>
    </div>
    <div class="offset-md-2">

    </div>
    }

</div>


</body>
